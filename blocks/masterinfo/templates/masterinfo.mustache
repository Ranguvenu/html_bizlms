{{#show}}
    <div class="col-md-3">
        <div class="info_detail d-flex align-items-center">
            <div class="icon_img mr-2">{{{icon}}}</div>
            <div class="py-2 flex-grow-1 d-flex flex-wrap info_data ml-1">
                <a href = "{{link}}" class="mr-2"> {{stringname}} </a>
                {{#count}}
                    <span>{{count}}</span>
                {{/count}}
                {{^count}}
                    <span><i class="fa fa-times"></i></span>
                {{/count}}
            </div>
        </div>
    </div>
{{/show}}
